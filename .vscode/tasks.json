{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build C (clang)",
      "type": "shell",
      "command": "clang",
      "args": [
        "-std=c11",
        "-Wall",
        "-Wextra",
        "-Wpedantic",
        "${file}",
        "-o",
        "${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}


